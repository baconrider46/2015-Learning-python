#!/usr/bin/env python3
import colors as c
from utils import ask
import random

print(c.clear)
print(c.magenta + "Welcome to the quiz game")
("Lets test your knowledge and see what you've learned.")

def q1():
    answer = ask("what color are the unicorns")
    if answer == 'pink':
        return True    
    return False

def q2():
    answer = ask("Where are they dancing?")
    if answer.startswith("rainbow"):
        return True
    return False

